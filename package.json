{
  "name": "vue-mapp",
  "version": "0.0.1",
  "private": true,
  "author": "Roman Tebenkov <mail@midrock.ru>",
  "description": "Web components based on Material Design principles",
  "main": "dist/index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap --nohoist=*",
    "test": "jest",
    "dev": "yarn run serve && yarn run lib:watch",
    "serve": "lerna exec --scope @vue-mapp/demo -- yarn serve",
    "lib:build": "lerna exec --scope vue-mapp -- yarn build",
    "clean": "lerna clean --yes && yarn && yarn bootstrap",
    "commit": "npx git-cz",
    "lint:fix": "eslint --ext .js,.vue --fix . && tslint --fix -p . && stylelint --fix \"src/**/*.vue\" \"src/**/*.scss\" && prettier --list-different --write \"**/*.{js,ts,json,css,scss,md}\" "
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/red-soft-ru/vue-mapp.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "vue",
    "material",
    "design",
    "components",
    "web",
    "typescript"
  ],
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/red-soft-ru/vue-mapp/issues"
  },
  "homepage": "https://github.com/red-soft-ru/vue-mapp#readme",
  "dependencies": {
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/webpack-env": "^1.13.9",
    "@vue/cli-plugin-eslint": "^3.5.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "commitizen": "^3.0.7",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "2.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.4",
    "node-sass": "^4.11.0",
    "stylelint": "^9.10.1",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.4",
    "vue-eslint-parser": "^6.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env PRE_COMMIT=true lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "tslint  --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.vue": [
      "eslint  --fix",
      "stylelint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "eslintIgnore": [
    "/node_modules/**",
    "**/*.ts"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "string-no-newline": null,
      "selector-max-universal": 1,
      "selector-max-type": [
        0,
        {
          "ignore": [
            "child",
            "descendant",
            "compounded"
          ]
        }
      ],
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": null
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
