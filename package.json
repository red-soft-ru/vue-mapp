{
  "name": "vue-mapp",
  "version": "0.0.1",
  "author": "Roman Tebenkov <mail@midrock.ru>",
  "description": "Web components based on Material Design principles",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "serve": "vue-cli-service serve",
    "commit": "npx git-cz",
    "lint:fix": "eslint --ext .js,.vue --fix . && tslint --fix -p . && stylelint --fix \"src/**/*.vue\" \"src/**/*.scss\" && prettier --list-different --write \"**/*.{js,ts,json,css,scss,md}\" "
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/red-soft-ru/vue-mapp.git"
  },
  "keywords": [
    "vue",
    "material",
    "design",
    "components",
    "web",
    "typescript"
  ],
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/red-soft-ru/vue-mapp/issues"
  },
  "homepage": "https://github.com/red-soft-ru/vue-mapp#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@typescript-eslint/parser": "^1.4.2",
    "@vue/cli-plugin-babel": "^3.4.1",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-plugin-typescript": "^3.4.1",
    "@vue/cli-service": "^3.4.1",
    "@vue/eslint-config-prettier": "^4.0.1",
    "autoprefixer": "^9.4.7",
    "babel-core": "^6.26.3",
    "clipboard": "^2.0.4",
    "commitizen": "^3.0.7",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "2.1.0",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "lodash": "^4.17.11",
    "node-sass": "^4.11.0",
    "prismjs": "^1.15.0",
    "rollup-plugin-analyzer": "^3.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-post-replace": "^1.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-uglify-es": "^0.0.1",
    "rollup-plugin-vue": "^4.7.1",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-standard": "^18.2.0",
    "ts-loader": "^5.3.3",
    "tslint-config-standard": "^8.0.1",
    "typescript": "3.2.1",
    "typescript-eslint-parser": "^22.0.0",
    "typescript-estree": "^18.1.0",
    "vue": "^2.6.7",
    "vue-eslint-parser": "^6.0.2",
    "vue-loader": "^15.7.0",
    "vue-property-decorator": "^7.3.0",
    "vue-router": "^3.0.2",
    "vue-template-compiler": "^2.6.7",
    "vuex": "^3.1.0",
    "vuex-class": "^0.3.1"
  },
  "peerDependencies": {
    "vue": "^2.6.7",
    "vue-property-decorator": "^7.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env PRE_COMMIT=true lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "tslint  --fix",
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.vue": [
      "eslint  --fix",
      "stylelint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "sourceType": "module",
      "allowImportExportEverywhere": false
    },
    "extends": [
      "plugin:vue/recommended"
    ],
    "rules": {
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "always"
        }
      ],
      "vue/attribute-hyphenation": [
        2,
        "always",
        {
          "ignore": [
            "custom-prop"
          ]
        }
      ],
      "vue/attributes-order": [
        "warn",
        {
          "order": [
            "EVENTS",
            "DEFINITION",
            "LIST_RENDERING",
            "CONDITIONALS",
            "RENDER_MODIFIERS",
            "GLOBAL",
            "UNIQUE",
            "TWO_WAY_BINDING",
            "OTHER_DIRECTIVES",
            "OTHER_ATTR",
            "CONTENT"
          ]
        }
      ],
      "vue/html-closing-bracket-spacing": [
        "error",
        {
          "startTag": "never",
          "endTag": "never",
          "selfClosingTag": "always"
        }
      ],
      "vue/require-component-is": 0,
      "no-console": "error",
      "no-useless-escape": 0
    }
  },
  "eslintIgnore": [
    "/node_modules/**",
    "**/*.ts"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "never",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ],
    "rules": {
      "string-no-newline": null,
      "selector-max-universal": 1,
      "selector-max-type": [
        0,
        {
          "ignore": [
            "child",
            "descendant",
            "compounded"
          ]
        }
      ],
      "at-rule-empty-line-before": [
        "always",
        {
          "except": [
            "blockless-after-same-name-blockless",
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ],
          "ignoreAtRules": [
            "else"
          ]
        }
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
