{
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "npmClientArgs": ["--no-package-lock"],
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish"
    }
  },
  "packages": ["packages/*", "projects/*", "services/*"]
}
